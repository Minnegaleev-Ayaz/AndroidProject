<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            >

            <ImageView
                android:id="@+id/first_team_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp"
                android:src="@drawable/team_icon" />

            <TextView
                android:id="@+id/first_team_name_tv"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <Button
                android:id="@+id/first_team_score_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/plus_icons"
                android:textColor="@color/white"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/second_team_score_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            >

            <ImageView
                android:id="@+id/second_team_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="4dp"
                android:src="@drawable/team_icon" />

            <TextView
                android:id="@+id/second_team_name_tv"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/league_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAlignment="center"
            android:visibility="visible" />


    </LinearLayout>

</LinearLayout>