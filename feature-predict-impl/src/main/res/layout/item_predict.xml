<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="вт 19 мар. 20:45"
            android:textAlignment="center"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/stats_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/statistic_icon"
            android:layout_alignParentEnd="true"
            android:background="@color/white"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/first_team_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/predictions_icon" />

            <TextView
                android:id="@+id/first_team_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team_2_name" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/first_team_score_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="12dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/plus_icons" />

        <ImageButton
            android:id="@+id/second_team_score_ib"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="12dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/plus_icons" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/second_team_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:src="@drawable/predictions_icon" />

            <TextView
                android:id="@+id/second_team_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="team_2_name" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/match_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="bo5" />

        <TextView
            android:id="@+id/league_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Победила команда 1"
            android:textAlignment="center"
            android:visibility="visible" />


    </LinearLayout>

</LinearLayout>