<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="12dp"
    android:background="@color/white"
    >
    <ImageButton
        android:id="@+id/statistic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/statistic_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="64dp"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:text="вт 19 мар. 20:45"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/first_team_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"
        android:src="@drawable/predictions_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <TextView
        android:id="@+id/first_team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team_1_name"
        app:layout_constraintEnd_toEndOf="@id/first_team_iv"
        app:layout_constraintStart_toStartOf="@id/first_team_iv"
        app:layout_constraintTop_toBottomOf="@id/first_team_iv" />

    <ImageView
        android:id="@+id/second_team_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"
        android:src="@drawable/predictions_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <TextView
        android:id="@+id/second_team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="team_2_name"
        app:layout_constraintEnd_toEndOf="@id/second_team_iv"
        app:layout_constraintStart_toStartOf="@id/second_team_iv"
        app:layout_constraintTop_toBottomOf="@id/second_team_iv" />

    <ImageButton
        android:id="@+id/first_team_score_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginVertical="12dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/plus_icons"
        app:layout_constraintStart_toEndOf="@id/first_team_iv"
        app:layout_constraintTop_toTopOf="@id/first_team_iv"
        app:layout_constraintBottom_toBottomOf="@id/first_team_iv"
        />

    <ImageButton
        android:id="@+id/second_team_score_ib"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginVertical="12dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/plus_icons"
        app:layout_constraintEnd_toStartOf="@id/second_team_iv"
        app:layout_constraintTop_toTopOf="@id/second_team_iv"
        app:layout_constraintBottom_toBottomOf="@id/second_team_iv"
         />

    <TextView
        android:id="@+id/league_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:gravity="center"
        android:text="Победила команда 1"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/first_team_name_tv" />
    <TextView
        android:id="@+id/match_type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/first_team_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/first_team_name_tv"
        android:text="bo5"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>