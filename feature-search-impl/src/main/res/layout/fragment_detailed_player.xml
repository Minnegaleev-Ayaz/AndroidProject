<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="8dp"
    android:background="@color/lightGrey"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="12dp">
        <ImageView
            android:id="@+id/player_image_iv"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:src="@drawable/user_icon"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/player_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginVertical="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/player_role_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="24dp">
        <TextView
            android:id="@+id/first_last_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="12dp"
            />
        <ImageView
            android:id="@+id/nationlity_iv"
            android:layout_width="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="12dp"
            android:layout_height="40dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/age_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="20dp">
        <TextView
            android:id="@+id/age_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="12dp"
            android:text="@string/age"
            />
        <TextView
            android:id="@+id/age_tv"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="12dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="26"
            android:layout_height="match_parent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/team_layout_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="24dp">
        <TextView
            android:id="@+id/team_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_marginHorizontal="12dp"
            />
        <ImageView
            android:id="@+id/team_image_iv"
            android:layout_width="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="12dp"
            android:layout_height="60dp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/unactive_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="36dp"
        android:text="@string/unactive"
        />
</LinearLayout>